{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
<div style="margin-top: 200px">
    <section class="container">
        <div>
            <a href="{{ path('app_send') }}" class="btn btn-dark">Envoyé message</a>
        </div>
        <div class="row">
            <div class="col">
                <h1>Messagerie</h1>
                <p> Reçus : {{ app.user.received|length }}</p>
                <p> Envoyés : {{ app.user.sent|length }}</p>
            </div>
        </div>
        <a href="{{ path('app_message') }}" class="btn btn-primary">Acceuil</a>
        <a href="{{ path('app_received') }}" class="btn btn-outline-primary">Boite de réception</a>
        <a href="{{ path('app_sent') }}" class="btn btn-outline-primary">Eléments envoyés</a>
    </section>
</div>
{% endblock %}