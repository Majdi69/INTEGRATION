{% extends 'back.html.twig' %}
{% block body %}
    <style>
        .card-footer {
            background-color: #2f3136;
            color: white;
            padding: 50px;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 12px;
        }

        thead {
            background-color: #4c4f52;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #4c4f52;
        }

        a {
            color: #2f3136;
            background-color: white;
            padding: 6px 12px;
            text-decoration: none;
            border-radius: 4px;
        }

        a:hover {
            background-color: #2f3136;
            color: white;
        }

    </style>
<div align="center" style="margin-top: 300px" class="card-footer">
    <h1>List of Users</h1>

    <table>
        <thead>
        <tr>
            <th>firstname &nbsp&nbsp&nbsp&nbsp</th>
            <th>name &nbsp&nbsp&nbsp&nbsp</th>
            <th>Email</th>
            <th>Roles &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname  }}</td>
                <td>{{ user.name }} &nbsp&nbsp&nbsp&nbsp</td>
                <td>{{ user.email }} &nbsp&nbsp&nbsp</td>
                <td>{{ user.roles|join(', ') }} &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
                <td>
                    <a href="{{ path('removeusers', {'id': user.id}) }}">Remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}